<br/><br/><br/><br/><br/>

<div class="container">
<p id="notice"><%= notice %></p>
 <div class="section-title">
    <h2>Not√≠cias ADEGO</h2>
  </div>
  
  <div class="new-list">
    <%= link_to new_notice_path do%>
      <i class="fa fa-plus-square fa-3x" aria-hidden="true"></i>
    <%end%>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8">
      <ul class="tecno-list">
          <% @notices.each do |notice| %>
              <li>
                <time datetime="2014-07-20">
                  <span class="day"><%= notice.created_at.mday %> </span>
                   <span class="month"><%= notice.created_at.strftime("%B").first(3) %></span>
                  <span class="year"><%= notice.created_at.year %></span>
                  <span class="time">ALL DAY</span>
                </time>
                <div class="info">
                  <h2 class="title"><%= notice.title %></h2>
                  <p class="desc"><%= notice.subtitle %></p>
                </div>
                <div class="social">
                  <ul>
                  <!-- show -->
                    <li class="eye" style="width:33%;">
                    <%= link_to notice, remote:true do %>
                        <span class="fa fa-eye"></span>
                      <%end%>
                    </li>

                    <li class="pencil" style="width:34%;">
                      <%= link_to edit_notice_path(notice) do%>
                        <span class="fa fa-pencil-square-o"></span>
                      <%end%>
                    </li>
                    <li class="times" style="width:33%;">
                      <%= link_to notice, method: :delete, data: { confirm: 'Are you sure?' } do%>
                        <span class="fa fa-times"></span>
                      <%end%>
                    </li>
                  </ul>
                </div>
              </li>
        <% end %>
      </ul>
    </div>
  </div>
  <%= paginate @notices %>
</div>
<div id="show" style="display:none;"></div>