<h1>Progresses</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Publication</th>
      <th>Subject</th>
      <th>Status</th>
      <th>Preach</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @progresses.each do |progress| %>
      <tr>
        <td><%= progress.body %></td>
        <td><%= progress.publication %></td>
        <td><%= progress.subject %></td>
        <td><%= progress.status %></td>
        <td><%= progress.preach.title %></td>
        <td><%= link_to 'Show', progress %></td>
        <td><%= link_to 'Edit', edit_progress_path(progress) %></td>
        <td><%= link_to 'Destroy', progress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

